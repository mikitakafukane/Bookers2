<%= render 'layouts/errors', obj: @book %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= render 'users/userinfo', user: current_user %>
      <h1>New book</h1>
      <%= render 'form', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to attachment_image_tag(book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'50x50'), user_path(book.user) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            <td><%= render 'favorites/favorite', book:book %></td>
            <td>コメント数:<%= book.book_comments.count %></td>
          </tr>
          <% end %>
        <tbody>
      </table>
    </div>
  </div>
</div>

