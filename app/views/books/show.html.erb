
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= render 'users/userinfo', user: @user %>
      <h1>New book</h1>
      <%= render 'form', book: @book_new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tr>
          <td><%= link_to attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'50x50'), user_path(@user) %>
            <br><%= link_to @book.user.name, user_path(@book.user.id) %>
          </td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
            <td><%= link_to "Destroy", book_path, method: :delete, class: "btn btn-danger" %></td>
          <% end %>
        </tr>
      </table>
      <div class="comments">
        <p>コメント件数:<%= @book.book_comments.count %></p>
        <% @book.book_comments.each do |book_comment| %>
          <p><%= image_tag('no_image.jpg') %></p>
          <%= book_comment.user.name %>
          <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
          <% if book_comment.user == current_user %>
          <div class="comment-delete">
            <%= link_to "削除", book_book_comment_path(book_comment.book,book_comment), method: :delete %>
          </div>
          <% end %>
        <% end %>
        </div>
        <div class="new-comment">
          <%= form_with(model:[@book,@book_comment],local:true) do |f| %>
            <%= f.text_area :comment,rows: '5', placeholder: "コメントをここに" %>
            
            <%= f.submit "送信する" %>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>